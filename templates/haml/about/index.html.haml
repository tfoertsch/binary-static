- stash(
-   title => l('About Us'),
- );
.about-us
  .grd-container
    .grd-grid-12.grd-parent
      %h1.center= l('The premier platform for trading binary options in the world’s financial markets')
      .grd-grid-7.grd-grid-mobile-12
        %img.mac.responsive{:src => url_for('images/pages/about/imac.svg')}
      .grd-grid-5.grd-grid-mobile-12
        %p
          != l('[_1] is one of the oldest and most respected names in online binary trading.', stash->{website_name})
        %p
          = l('Using our website, customers can trade currencies, indices, stocks and commodities 24/7. We have the most flexible pricing and the most comprehensive suite of products available.')
        %p
          != l('[_1] has earned an enviable reputation for our commitment to high ethical standards and the quality of the trading experience we provide.', stash->{website_name})
        %p
          != l('When you trade with [_1], you can be assured that your deposits are held in a separate trust account and are not used for any other purpose.', stash->{website_name})
  %div.blue-fill
    .grd-container
      .grd-grid-12.grd-parent.facts
        %h1.center.margin-top= l('Key facts')
          .grd-grid-12.grd-parent.border-bottom
            .grd-grid-6.grd-grid-mobile-12
              .grd-grid-6.center.border-right-top
                %a.pjaxload{:href => url_for('/group-history')}
                  %img.responsive{:src => url_for('images/pages/about/founded.svg')}
                %p
                  != l('<a href="[_1]">Founded</a> October 1999', url_for('/group-history'))
              .grd-grid-6.center.border-right-top
                %img.responsive{:src => url_for('images/pages/about/debt-free.svg')}
                %p
                  = l('Debt-free')
            .grd-grid-6.grd-grid-mobile-12
              .grd-grid-6.center.border-right-top
                %a.pjaxload{:href => url_for('/careers')}
                  %img.responsive{:src => url_for('images/pages/about/staff.svg')}
                %p
                  != l('Over 90 <a href="[_1]">staff</a> and contractors worldwide', url_for('/careers'))
              .grd-grid-6.center
                %img.responsive{:src => url_for('images/pages/about/1mil.svg')}
                %p
                  = l('Over 1 million registered accounts worldwide')
          .grd-grid-12.grd-parent
            .grd-grid-6.grd-grid-mobile-12
              .grd-grid-6.center.border-right-bottom
                %a.pjaxload{:href => "http://binarycom.statuspage.io/", :target => '_blank'}
                  %img.responsive{:src => url_for('images/pages/about/transacts.svg')}
                %p
                  != l('Binary’s platform transacts on average 15 <a href="http://binarycom.statuspage.io/" target="_blank">transactions</a> per second, 24/7')
              .grd-grid-6.center.border-right-bottom
                %a.pjaxload{:href => url_for('/contact')}
                  %img.responsive{:src => url_for('images/pages/about/locations.svg')}
                %p
                  != l('<a href="[_1]">Offices</a> in Malta, Malaysia and Japan', url_for('/contact'))
            .grd-grid-6.grd-grid-mobile-12
              .grd-grid-6.center.border-right-bottom
                %img.responsive{:src => url_for('images/pages/about/license.svg')}
                %p
                  = l('Licensed and regulated in Malta, the United Kingdom, the Isle of Man, and Ireland')
              .grd-grid-6.center.align
                %img.responsive{:src => url_for('images/pages/about/languages.svg')}
                %p
                  = l('Published in English, Japanese, Chinese, Arabic, Polish, German, French, Spanish, Portuguese, Italian and Russian')
  .grd-container
    .grd-grid-12.grd-parent
      %p
        != l('[_1] is owned and operated by the Binary Ltd. group of companies. For more information, <a href="[_2]">visit our history page</a>.', stash->{website_name}, url_for('/group-history'))
      %p
        = l('In the UK and Isle of Man, our clients trade through Binary (IOM) Ltd. In the European Union (except UK), they trade through Binary (Europe) Ltd and Binary Investments (Europe) Ltd. In the rest of the world, they trade through Binary (C.R.) S.A.')
